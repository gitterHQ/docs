                <apigee:authentication required="true"/>
                <doc apigee:url="https://developer.gitter.im/docs/messages-resource#list-messages">
                    List of messages in a room. Room ID maybe retrieved using show room info using
                    `/rooms`.</doc>
                <request>
                    <param style="query" name="skip" default="100" required="false"
                        type="xsd:positiveInteger">
                        <doc>Skip n messages (constrained to 5000 or less).</doc>
                    </param>
                    <param style="query" name="beforeId" default="" required="false"
                        type="xsd:string">
                        <doc>Get messages before `beforeId`.</doc>
                    </param>
                    <param style="query" name="afterId" default="" required="false"
                        type="xsd:string">
                        <doc>Get messages after `afterId`.</doc>
                    </param>
                    <param style="query" name="aroundId" default="" required="false"
                        type="xsd:string">
                        <doc>Get messages around `aroundId` including this message.</doc>
                    </param>
                    <param name="limit" required="false" style="query" type="xsd:positiveInteger"
                        default="30">
                        <doc>Maximum number of messages to return (constrained to 100 or less)</doc>
                    </param>
                    <param name="q" style="query" type="xsd:string" required="false" default="Hi">
                        <doc>Search query for text in message. Use from:@username to limit the
                            result to messages send by the given username.</doc>
                    </param>
                    <param name="lang" style="query" type="xsd:string" required="false" default="en">
                        <doc>Language code. Language of the query.</doc>
                    </param>
                    <param name="lean" style="query" type="xsd:boolean" required="false"
                        default="false">
                        <doc>Show plain objects if `true` (performant) else show full
                            document.</doc>
                    </param>
                </request>
            </method>

