            <!-- Update Room topic/search engine index/tags selectively -->
            <method id="update-room" name="PUT" apigee:displayName="Update Room">
                <apigee:tags>
                    <apigee:tag primary="true">Rooms Resource</apigee:tag>
                </apigee:tags>
                <apigee:authentication required="true"/>
